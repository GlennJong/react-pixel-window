{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
